{{> header}}
<div class="container mb-5 mt-5">
  <h1>Lista de Tasks</h1>
  <table class="table mt-5">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Tarefa</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
      <tr>
        <th scope="row">
          <a href="/tasks/{{this.id}}">{{this.id}}</a>
        </th>
        <td>{{this.title}}</td>
        <td>
          <a href="/tasks/{{this.id}}/edit" class="btn btn-primary">Editar</a>
          <form action="/tasks/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" value="submit" onclick="return confirm('Tem certeza que deseja excluir o registro?')"
              class="btn btn-danger">Excluir</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <a href="/tasks/create" class="btn btn-success">Adicionar Nova Tarefa!</a>
</div>

